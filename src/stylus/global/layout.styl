/**
 * Stylus for basic layout
 *
 * Author: czhang
 */

*
*:before
*:after
	box-sizing border-box

html
	width 100%
	height 100%

body
	font-family 'Roboto', sans-serif
	color color-blue-zodiac
	font-size 100%
	text-rendering optimizeLegibility
	-webkit-overflow-scrolling touch
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	user-select text
	overflow-x hidden
	width 100%
	height 100%
	line-height 1
	background-color #fbfbfb

.strong
	font-weight 700

blockquote
q
	quotes none

blockquote:before
blockquote:after
q:before
q:after
	content ''
	content none

ol
ul
li
	margin 0
	padding 0
	border 0
	outline 0
	font-weight inherit
	font-style inherit
	font-family inherit
	font-size 100%
	vertical-align baseline

ol
ul
	list-style none

h1
h2
h3
h4
h5
h6
p
	margin 0
	padding 0
	border 0
	outline 0

h1
h2
h3
h4
h5
h6
	font-weight 400
	line-height line-height-heading

h1
	font-size font-size-xx-large
	color color-blue-bigstone

h2
	font-size font-size-x-large
	color color-blue-bigstone

h3
	font-size font-size-large

h4
	font-size font-size-medium

h5
	font-size font-size-x-medium

h6
	font-size font-size-small

a
	color color-blue-aluminium
	text-decoration none
	transition timing-1 color linear

	&:hover
		color color-blue-endeavour

	&:active
		color color-blue-midnight-blue

.svgwrapper .icon
	display inline-block

svg
	pointer-events none

iframe
	border none

#content
	max-width 1500px
	width content-width
	display flex
	flex-direction column
	min-height 85vh
	justify-content space-between
	
	> div
		display flex
		flex auto
		flex-direction column

#root
	margin-top 85px
	display flex
	justify-content center
	
	&.no-margin-left
		margin-left 0

