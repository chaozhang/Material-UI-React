.page-charts
	display flex
	color color-blue-aluminium

	.right
		width 100%
		position relative
		display flex
		justify-content center
		flex auto

		> div
			width 100%
			display flex
			justify-content center
			align-items center
			flex-direction column
			
			.tabs
				width 100%;

			.charts-content
				display flex
				width 100%
				height 100%
				justify-content center
				align-items center
				padding 20px
				
				.code
					display flex
					width 100%
					overflow auto
					background-color color-blue-athens
					color color-blue-rhino

				.markdown
					width 100%
					background-color color-blue-athens

